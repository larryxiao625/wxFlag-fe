}
.each-dynamic{
  display: flex;
  flex-direction: column;
  width: 300px;
  margin: 0px auto;
}
.grid-image{
  display: flex;
  flex-wrap: wrap;
  margin-right: -20px;
}
.diveder{
  margin: 5px 5px;
  padding: 0 20px 0;
  line-height: 1px;
  border: 1px solid #595959;
  text-align: center;
}
.user-info{
  display: flex;
  width: 300px;
  flex-direction: row;
  overflow: hidden
}