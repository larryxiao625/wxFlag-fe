/* pages/flags/sign/sign.wxss */
.container{
  margin-top: 0rpx;
  display: flex;
  flex-direction: column
}

.input-box{
  margin: 0px 10px;
}

.image-show{
  width: 200rpx;
  height: 200rpx;
  border-style: solid;
  border-width: 1px;
  border-radius: 5px;
}

.choose-image{
  display: flex;
}
.input-text-box{
  height: 120px;
}
.diveder{
  margin: 20px 10px;
  padding: 0 20px 0;
  line-height: 1px;
  border: 1px solid #595959;
  text-align: center;
}
.submit-button{
  margin: 20px 60px;
  background-color: #2BA245;
  text-align: center;
  height: 80rpx;
  vertical-align: middle;
  display: flex;
  align-items:center;
  justify-content: center;
  border-radius: 10px;
}