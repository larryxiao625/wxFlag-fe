/* pages/flags/JOIN.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  color: #222222;
  padding: 10rpx 0 0 0;
}

.upper {
  height: 500rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.upperMid {
  width: 100%;
  display: flex; 
  flex-direction: row; 
  justify-content: space-around; 
  align-items: center;
  z-index: 2;
}

.upperHead {
  font-size: 70rpx;
  z-index: 2;
  position: relative;
  left: -120rpx;
  top: 30rpx;
}

.upperVice {
  color: #444444;
  font-size: 39rpx;
}

.join {
  background-color: #56a7de; 
  color: #ffffff; 
  z-index: 2;
  height: 60rpx;
  width: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx #888888 solid;
  font-size: 36rpx;
  font-family: '微软雅黑', Microsoft Yahei;
}

.backgroundImg {
  width: 100%;
  position: absolute;
  z-index: 1;
}

.under {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.underHead {
  font-size: 36rpx;
  font-weight: bold;
  padding: 20rpx 30rpx 10rpx 30rpx;
}

.underText {
  font-size: 30rpx;
  color: #666666;
  padding: 10rpx 50rpx 10rpx 50rpx;
}