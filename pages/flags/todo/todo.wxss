.top {
  height: 250rpx;
  width: 95%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.topLeft {
  height: 75%;
  width: 27%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #dddddd;
}

.topRight {
  height: 100%;
  width: 64%;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  position: relative;
  left: 0;
}

.topRightHead {
  font-size: 48rpx;
}

.topRightVice {
  color: #444444;
  font-size: 42rpx;
}

.center {
  height: 45%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.noticeHead {
  font-size: 39rpx;
  font-weight: bold;
  padding: 20rpx 30rpx 10rpx 30rpx;
}

.noticeText {
  font-size: 30rpx;
  color: #666666;
  padding: 10rpx 50rpx 10rpx 50rpx;
}

.bottom {
  height: 10%;
  width: 100%;
  margin: 50rpx 0 0 0;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}